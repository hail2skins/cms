<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @customer.first_name %>
</p>

<% if !@customer.middle_name.blank? %>
<p>
  <b>Middle name:</b>
  <%= @customer.middle_name %>
</p>
<% end %>

<p>
  <b>Last name:</b>
  <%= @customer.last_name %>
</p>

<p>
  <b>Email:</b>
  <%= @customer.email %>
</p>

<p>
  <b>Phone:</b>
  <% @customer.phones.each do |phone| %>
    <%= number_to_phone(phone.number, area_code: true) %>
  <% end %>
</p>

<% if @customer.packages.count > 0 %>
  <% @customer.packages.each do |p| %>
    <p><%= p.name %></p>
    <p><%= p.count %></p>
    <% @customer.customer_packages.each do |j| %>
      <p><%= j.date_purchased %></p>
      <p><%= j.used_count %></p>
    <% end %>
  <% end %>
<% end %>

<address>
  <%= @customer.address.line1 %><br />
  <% if !@customer.address.line2.blank? %>
    <%= @customer.address.line2 %><br />
  <% end %>
  <%= @customer.address.city %>, <%= @customer.address.state %>, <%= @customer.address.zip %><br />
</address>



<%= link_to 'Edit', edit_business_customer_path(@business, @customer) %> |
<%= link_to 'Back', business_customers_path(@business) %>
