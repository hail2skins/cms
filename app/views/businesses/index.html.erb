<h1>Listing businesses for <%= link_to @owner.name %></h1>

<table>
  <thead>
    <tr>
      <th>Business</th>
      <th>Description</th>
      <th>Services</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
    <tr>
      <td><%= link_to business.name, [@owner, business] %></td>
      <td><%= business.description %></td>
      <td><%= business.services.count %></td>
      <td><%= link_to 'Edit', edit_owner_business_path(@owner, business) %></td>
      <td><%= link_to 'Destroy', [@owner, business], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Business', new_owner_business_path(@owner) %>
