<%= form_for([@business, @package]) do |f| %>
  <% if @package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% @package.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :count %><br>
    <%= f.number_field :count %>
  </div>
  <div class="field">
    <%= f.label :date_purchased %><br>
    <%= f.date_field :date_purchased %>
  </div>
  <div class="field">
    <%= f.label :date_completed %><br>
    <%= f.date_field :date_completed %>
  </div>
  <div>
    <%= f.fields_for :prices do |price| %>
    <%= render partial: 'prices/form', locals: { f: price } %>
  <% end %>
  </div> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
